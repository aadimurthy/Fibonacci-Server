{erl_opts, [debug_info]}.
{deps, [
    {cowboy, {git, "https://github.com/ninenines/cowboy", {tag, "2.6.3"}}},
    {worker_pool, "4.0.0"}]}.

{relx, [{release, { fibonacci_server, "0.1.0" },
    [fibonacci_server,
        sasl]},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}]
}.

{plugins, [rebar3_run]}.
{profiles, [{prod, [{relx, [{dev_mode, false},
    {include_erts, true}]}]
}]
}.

